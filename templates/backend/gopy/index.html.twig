{# Nội dung trong block headline #}
{% block headline %}
Danh sách chủ đề góp ý
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}
<!-- Nút thêm mới, bấm vào sẽ hiển thị form nhập thông tin Thêm mới -->
<a href="create.php" class="btn btn-primary">
    <span data-feather="plus"></span> Thêm mới
</a>
<table class="table table-bordered table-hover mt-2">
    <thead class="thead-dark">
        <tr>
            <th>Mã góp ý</th>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th>Điện thoại</th>
            <!-- <th>Chủ đề góp ý</th> -->
            <th>Tiêu đề</th>
            <th>Nội dung</th>
            <th>Ngày góp ý</th>
            <th>Hành động</th>

        </tr>
    </thead>
    <tbody>
        {% for gopy in ds_gopy %}
        <tr>
            <td>{{ gopy.gy_ma }}</td>
            <td>{{ gopy.gy_hoten }}</td>
            <td>{{ gopy.gy_email }}</td>
            <td>{{ gopy.gy_diachi }}</td>
            <td>{{ gopy.gy_dienthoai }}</td>
            <!-- <td>{{ gopy.cdgy_ma }}</td> -->
            <td>{{ gopy.gy_tieude }}</td>
            <td>{{ gopy.gy_noidung }}</td>
            <td>{{ gopy.gy_ngaygopy }}</td>

            <td>
                <!-- Nút sửa, bấm vào sẽ hiển thị form hiệu chỉnh thông tin dựa vào khóa chính `cdgy_ma` -->
                <a href="edit.php?gy_ma={{ gopy.cdgy_ma }}" class="btn btn-warning">
                    <span data-feather="edit"></span> Sửa
                </a>

                <!-- Nút xóa, bấm vào sẽ xóa thông tin dựa vào khóa chính `cdgy_ma` -->
                <a href="delete.php?cdgy_ma={{ gopy.cdgy_ma }}" class="btn btn-danger">
                    <span data-feather="delete"></span> Xóa
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
{# End Nội dung trong block content #}

{# Nội dung trong block content #}
{% block content %}
<form name="frmGopY" id="frmGopY" method="post" action="/shoponline/backend/gopy/edit.php?cdgy_ma={{ gopy.cdgy_ma }}">
    <div class="form-group">
        <label for="cdgy_ma">Mã góp ý</label>
        <input type="text" class="form-control" id="cdgy_ma" name="cdgy_ma" placeholder="Mã Góp ý" readonly value="{{ gopy.cdgy_ma }}">
        <small id="cdgy_maHelp" class="form-text text-muted">Mã góp ý không được hiệu chỉnh.</small>
    </div>
    <div class="form-group">
        <label for="cdgy_ten">Tên góp ý</label>
        <input type="text" class="form-control" id="cdgy_ten" name="cdgy_ten" placeholder="Tên nhà sản xuất" value="{{ gopy.cdgy_ten }}">
    </div>
    <button class="btn btn-primary" name="btnCapNhat">Cập nhật</button>
</form>
{% endblock %}
{# End Nội dung trong block content #}
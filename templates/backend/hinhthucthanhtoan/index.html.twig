{# Kế thừa layout backend #}
{% extends "backend/layouts/layout.html.twig" %}

{# Nội dung trong block title #}
{% block title %}
Danh sách thanh toán
{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
Danh sách thanh toán
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}
<!-- Nút thêm mới, bấm vào sẽ hiển thị form nhập thông tin Thêm mới -->
<a href="create.php" class="btn btn-primary">
    <span data-feather="plus"></span> Thêm mới
</a>
<table class="table table-bordered table-hover mt-2">
    <thead class="thead-dark">
        <tr>
            <!-- <th>Mã loại thanh toán</th> -->
            <th>Tên loại thanh toán</th>
            
            <th>Ghi chú</th>
        </tr>
    </thead>
    <tbody>
        {% for hinhthucthanhtoan in ds_hinhthucthanhtoan %}
        <tr>
            <!-- <td>{{ hinhthucthanhtoan.httt_ma }}</td> -->
            <td>{{ hinhthucthanhtoan.httt_ten }}</td>
            
            <td>
                <!-- Nút sửa, bấm vào sẽ hiển thị form hiệu chỉnh thông tin dựa vào khóa chính `httt_ma` -->
                <a href="edit.php?httt_ma={{ hinhthucthanhtoan.httt_ma }}" class="btn btn-warning">
                    <span data-feather="edit"></span> Sửa
                </a>

                <!-- Nút xóa, bấm vào sẽ xóa thông tin dựa vào khóa chính `httt_ma` -->
                <a href="delete.php?httt_ma={{ hinhthucthanhtoan.httt_ma }}" class="btn btn-danger">
                    <span data-feather="delete"></span> Xóa
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
{# End Nội dung trong block content #}
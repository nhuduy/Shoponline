{# Nội dung trong block content #}
{% block content %}
<form name="frmNhaSanXuat" id="frmNhaSanXuat" method="post" action="/shoponline/backend/nhasanxuat/create.php">
    <div class="form-group">
        <label for="nsx_ma">Mã Nhà sản xuất</label>
        <input type="text" class="form-control" id="nsx_ma" name="nsx_ma" placeholder="Mã nhà sản xuất" readonly>
        <small id="nsx_maHelp" class="form-text text-muted">Mã Nhà sản xuất không được hiệu chỉnh.</small>
    </div>
    <div class="form-group">
        <label for="nsx_ten">Tên Nhà sản xuất</label>
        <input type="text" class="form-control" id="nsx_ten" name="nsx_ten" placeholder="Tên nhà sản xuất">
    </div>
    <button class="btn btn-primary" name="btnCapNhat">Cập nhật</button>
    <hr>
</form>
{% endblock %}
